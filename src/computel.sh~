#!/bin/bash
brr="brr"
usage="\nProgram:\tcomputel
\nVersion:\t0.3 
\n\nusage:\tsh computel.sh [options]* {-1 <fq1> -2 <fq2> -3 <fq3> -o <o>}
\n\n\t<fq1>\tfastq file (the first pair or the only fastq file (for single end reads)
\n\n\t<fq2>\tfastq file (optional: the second pair of fastq files, if exists)
\n\n\t<fq3>\tfastq file (optional: the third pair of fastq files, if exists)
\n\n\t<o>\toutput file (optional: the default is computel.out.xls)
\n"

if [[ $# == 0 ]]; then
  echo -e $usage
  exit 1	
fi 

b = 0
echo i is $b
<<comment
while [ $i -lt $# ];
do
	echo -e i is $i
	#brr=${!i}
	#echo brr is $brr
done
comment

